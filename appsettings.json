{
  "Logging": {
    "Console": {
      "IncludeScopes": false
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true, 
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP", 
    "ClientIdHeader": "X-ClientId", 
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*", 
        "Period": "1m",  
        "Limit": 100    
      },
      {
        "Endpoint": "GET:/api/posts",
        "Period": "2s",
        "Limit": 1,
        "EnableEndpointRateLimiting": true
      },
      {
        "Endpoint": "POST:/api/medias",
        "Period": "2s",
        "Limit": 1,
        "EnableEndpointRateLimiting": true
      }
    ]
  }
}

